@model TodoApp.Models.Task

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="createTaskForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompleted" /> @Html.DisplayNameFor(model => model.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <button type="button" id="createButton" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div id="successMessage" class="alert alert-success" style="display:none;">
    Task created successfully!
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#createButton").click(function (e) {
                e.preventDefault(); 

                $(this).prop("disabled", true);

                $.ajax({
                    url: "@Url.Action("Create", "Tasks")",
                    type: "POST",
                    data: $("#createTaskForm").serialize() + "&" + $("input[name=__RequestVerificationToken]").serialize(),
                    dataType: "html", 
                    success: function (data) {
                        if ($(data).find(".validation-summary-errors").length > 0) {
                            $("#createTaskForm").html(data);
                        } else {
                            $("#successMessage").fadeIn();
                            window.location.href = data;
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error:", xhr.responseText);
                        alert("Error occurred. Please check the console for details.");
                    },
                    complete: function () {
                        $("#createButton").prop("disabled", false);
                    }
                });
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

